.home

  &__k1
    position: fixed
    top: 260px @md 500px @lg 760px
    left: auto @lg 6.25%
    right: 0 @lg auto
    z-index: 2
    width: @md-down 24% @lg-down 11%
    opacity: 0
    transition: opacity .3s ease-in-out
    transition-delay: .9s
    display: none @md block

    &--show
      opacity: 1